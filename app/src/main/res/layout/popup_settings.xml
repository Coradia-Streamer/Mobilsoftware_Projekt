<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary">

    <TextView
        android:id="@+id/pop_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/action_settings"
        android:textAlignment="center"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pop_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/pop_settings"
        android:layout_marginTop="60dp"
        android:layout_alignStart="@id/pop_settings"
        android:text="@string/light_theme_name"
        android:textAlignment="textStart"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="20sp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/theme_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:layout_alignTop="@id/pop_settings"
        android:layout_alignEnd="@id/pop_settings"
        app:switchMinWidth="60dp"
        app:showText="false" />

</RelativeLayout>