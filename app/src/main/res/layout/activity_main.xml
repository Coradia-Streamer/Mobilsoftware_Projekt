<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="?attr/colorPrimaryVariant">

    <include layout="@layout/toolbar" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="12dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/bwscore_logo_line"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/popUp_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ScrollView
        android:id="@+id/scrollMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="101dp"
        android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:text="@string/start_welcome"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/details_line3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:layout_constraintTop_toBottomOf="@id/welcome_text"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/line"
                android:contentDescription="@string/line_description"/>

            <TextView
                android:id="@+id/startText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/details_line3"
                app:layout_constraintStart_toStartOf="@id/welcome_text"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/start_welcome2"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:justificationMode="inter_word"/>

            <TextView
                android:id="@+id/startText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/startText1"
                app:layout_constraintStart_toStartOf="@id/welcome_text"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="2dp"
                android:text="@string/start_welcome3"
                android:textColor="?attr/colorSecondaryFixed"
                android:textSize="19sp"
                android:textStyle="normal"
                android:textAlignment="textStart"
                android:justificationMode="inter_word"/>

            <TextView
                android:id="@+id/startText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/startText2"
                app:layout_constraintStart_toStartOf="@id/welcome_text"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:text="@string/start_welcome4"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/startText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/startText3"
                app:layout_constraintStart_toStartOf="@id/welcome_text"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="2dp"
                android:text="@string/start_welcome5"
                android:textColor="?attr/colorSecondaryFixed"
                android:textSize="19sp"
                android:textStyle="normal"
                android:textAlignment="textStart"
                android:justificationMode="inter_word"/>

            <TextView
                android:id="@+id/startText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/startText4"
                app:layout_constraintStart_toStartOf="@id/welcome_text"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="4dp"
                android:text="@string/start_welcome6"
                android:textColor="?attr/colorSecondaryFixed"
                android:textSize="19sp"
                android:textStyle="normal"
                android:textAlignment="textStart"
                android:justificationMode="inter_word"/>

            <TextView
                android:id="@+id/startText6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/startText5"
                app:layout_constraintStart_toStartOf="@id/welcome_text"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:text="@string/start_welcome7"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imagebwegt"
                android:layout_width="140dp"
                android:layout_height="70dp"
                app:layout_constraintTop_toBottomOf="@id/startText6"
                app:layout_constraintStart_toStartOf="@id/welcome_text"
                app:layout_constraintEnd_toEndOf="@id/welcome_text"
                app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="10dp"
                android:contentDescription="bwegt_logo"
                app:srcCompat="@drawable/bwegt_logo_neu" />

            <ImageView
                android:id="@+id/imagenextbike"
                android:layout_width="150dp"
                android:layout_height="70dp"
                app:layout_constraintTop_toBottomOf="@id/startText6"
                app:layout_constraintStart_toStartOf="@id/welcome_text"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="30dp"
                android:contentDescription="kvvnextbike_logo"
                app:srcCompat="@drawable/nextbikekvv_logo_neu" />

            <TextView
                android:id="@+id/linkNextbike"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="@string/link_nextbike"
                android:textColor="?attr/colorSecondaryFixed"
                android:textSize="14sp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/imagenextbike"
                app:layout_constraintStart_toStartOf="@id/imagenextbike"
                app:layout_constraintEnd_toEndOf="@+id/imagenextbike"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.40"/>

            <TextView
                android:id="@+id/linkbwegt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="@string/link_bwegt"
                android:textColor="?attr/colorSecondaryFixed"
                android:textSize="14sp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/imagebwegt"
                app:layout_constraintStart_toStartOf="@+id/imagebwegt"
                app:layout_constraintEnd_toEndOf="@+id/imagebwegt"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.40"/>

            <TextView
                android:id="@+id/startText7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linkNextbike"
                app:layout_constraintStart_toStartOf="@id/welcome_text"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/start_welcome8"
                android:textColor="?attr/colorSecondaryFixed"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/mapButton"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="100dp"
                android:background="@color/Alarmred"
                android:text="START"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.476"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>